@page
@model LMS.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm Registration";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 500px; width: 100%; border: none;">

        <!-- Header -->
        <div class="text-center">
            <i class="fa-solid fa-user-check fa-4x text-success"></i>
            <h2 class="mt-3 fw-bold">Confirm Your Registration</h2>
            <p class="text-muted">Finalize your role selection.</p>
        </div>

        <!-- Email Display -->
        <div class="alert alert-info text-center fw-bold">
            <i class="fa-solid fa-envelope"></i> Email: <span class="text-primary">@Model.Email</span>
        </div>

        <!-- Role Selection Form -->
        <form method="post" class="mt-3">
            <div class="form-group mb-3">
                <label for="SelectedRole" class="fw-bold">Select Your Role:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-user-tag"></i></span>
                    <select asp-for="SelectedRole" class="form-control">
                        <option value="">-- Select Role --</option>
                        <option value="Student">🎓 Student</option>
                        <option value="Instructor">📚 Instructor</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-bold shadow">
                <i class="fa-solid fa-circle-check"></i> Confirm Role
            </button>
        </form>

        <!-- Go Back Link -->
        <div class="text-center mt-3">
            <a asp-page="./Login" class="text-decoration-none text-primary fw-bold">
                <i class="fa-solid fa-arrow-left"></i> Back to Login
            </a>
        </div>

    </div>
</div>
