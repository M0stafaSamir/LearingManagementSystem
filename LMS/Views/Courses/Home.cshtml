@model IEnumerable<LMS.ViewModel.Inst.CourseIncomeViewModel>
@{
    dynamic instIncome = ViewBag.instIncome ; 
}
<h1>Home</h1>

<p>
    <a href="@Url.Action("Create")">Create New</a>
</p>

<div>
    <h3>Instructor Overview</h3>
    @if (instIncome != null)
    {
        <p><strong>Instructor ID:</strong> @instIncome.InstID</p>
        <p><strong>Instructor Name:</strong> @instIncome.InstName</p>
        <p><strong>Total Courses:</strong> @instIncome.CoursesCount</p>
        <p><strong>Total Students:</strong> @instIncome.StudentsCount</p>
        <p><strong>Total Income:</strong> @instIncome.TotalIncome</p>
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            No instructor data available.
        </div>
    }

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Amount</th>
            <th>Students Count</th>
            <th>Category</th>
            <th>Instructor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseName</td> 
                <td>@item.Amount</td> 
                <td>@item.StudentsCount</td> 
                <td>@item.CategoryName</td> 
                <td>@item.InstructorName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.courseID })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = item.courseID })">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
