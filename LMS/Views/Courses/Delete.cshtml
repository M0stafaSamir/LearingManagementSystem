@model LMS.Models.InstractourModel.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <div class="row p-5 justify-content-center align-items-center my-5">
    <div class="col-md-6">
        <img src="~/images/courses/@Model.Image" alt="Alternate Text" class="img-fluid" />
    </div>
        <div class="col-md-6 ">
            <h5 class="p-3"><span class="badge text-dark">Name</span>   :  <span>@Model.Name</span></h5>
            <h5 class="p-3"><span class="badge text-dark">Description</span>    :  <span>@Model.Description</span></h5>
            <h5 class="p-3"><span class="badge text-dark">Price</span>  :  <span>@Model.Price</span>  EGP</h5>
            <h5 class="p-3">
                <span class="badge text-dark">Condition</span>  :
                @if (Model.IsDeleted)
                        {
                           <span class="text-danger"><i class="fa-solid fa-circle-xmark"></i> Rejected</span>
                        }
                        else if (Model.IsAccepted)
                        {
                           <span class="text-success"><i class="fa-solid fa-circle-check"></i> Accepted</span>
                        }
                        else
                        {
                        <span class="text-info"><i class="fa-solid fa-hourglass-half"></i> Pending</span>
                        }
        </h5>
            <h5 class="p-3"><span class="badge text-dark">Category</span>   :  <span>@Model.Category.Name</span></h5>
            <h5 class="p-3"><span class="badge text-dark">Instructor</span> : <span>@Model.Instructor.Name</span></h5>
            <form asp-action="Delete" class="d-flex justify-content-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mx-2">Delete</button>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </form>
    </div>
    </div>


</div>
