@model IEnumerable<LMS.Models.InstractourModel.Course>

@{
    ViewData["Title"] = "PendingCourses";
}

<h1>PendingCourses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row justify-content-around align-items-center my-5">

    @foreach (var item in Model)
    {
        <div class="col-md-4 flex-column justify-content-center align-items-center my-5">
            <partial name="_CourseCard" for="@item"></partial>
            <div class="row justify-content-center align-items-center my-2">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning col-3">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary col-3 mx-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger col-3">Delete</a>
            </div>
        </div>
    }

</div>
