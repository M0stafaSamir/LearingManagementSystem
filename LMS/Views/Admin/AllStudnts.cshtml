@model IEnumerable<LMS.Models.AppUser>

@{
    ViewData["Title"] = "AllStudnts";
}
<div class="container my-4 mx-2">


<h1>All Students</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Id)</th>
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Id)</th>
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                Student
                            </td>
                            <td>
                                @* <a  asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                                <a asp-action="Details" asp-controller="Student" class="text-primary fw-bold text-decoration-none" asp-route-id="@item.Id"><i class="fa-solid fa-eye"></i> Details</a> |
                                <a asp-action="Delete" asp-controller="Student" class="fw-bold text-decoration-none text-danger" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>

