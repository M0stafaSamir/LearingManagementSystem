@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    Layout = "_Layout";

    if (User.IsInRole("Instructor")){

        Layout = "_LayoutInstructor";
    }
    else if (User.IsInRole("Admin"))
    {
    Layout = "_LayoutAdmin";
    }

}
