@model IEnumerable<LMS.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container  my-4 mx-2">
<h1>Categories</h1>

<p>
        <a asp-action="Create" class="text-success fs-4 text-decoration-none"><i class="fa-solid fa-folder-plus"></i> Create New Category</a>
</p>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary text-decoration-none fw-bold"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none fw-bold text-danger"><i class="fa-solid fa-trash-can"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


